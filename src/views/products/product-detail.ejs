<!-------------------------------------------------INCLUYENDO HEAD Y HEADER------------------------------>

<%- include('../parcials/head') %>


  <div class="filtro">
    <div>
      <div class="container">
        <h1>Entrega:Cordoba</h1>
      </div>
      <div class="container">
        <h1>07/03 10:00</h1>
      </div>
    </div>
    <i class="fas fa-arrow-right"></i>
    <div>
      <div class="container">
        <h1>Devolucion:Cordoba</h1>
      </div>
      <div class="container">
        <h1>07/03 10:00 </h1>
      </div>
    </div>

  </div>

  <main>
    <div class="dos-forms">
      <form action='product-listing' method="get" class='formulario registro busqueda tamanio'>
        <div>
          <h4 class='titulo'>NUEVA BUSQUEDA</h4>
        </div>
        <div class='alinear'>
          <div class="mb-1 ancho-hijos">
            <select class="form-select" aria-label="Default select example">
              <option selected>Ciudad retiro</option>
              <%for(i of cities) { %>
                <option value="<%i.id%>">
                  <%=i.name%>
                </option>
                <% } %>
            </select>
          </div>
          <div class="mb-1 ancho-hijos">
            <select class="form-select" aria-label="Default select example">
              <option selected>Ciudad devolución</option>
              <%for(i of cities) { %>
                <option value="<%i.id%>">
                  <%=i.name%>
                </option>
                <%}%>
            </select>
          </div>

        </div>
        <div class='alinear'>
          <div class="mb-1 ancho-hijos">
            <label for="fecha-recogida" class='blanco'>Fecha de recogida</label>
            <input type="date" class="form-control" id="fecha-recogida">
          </div>
          <div class="mb-1 ancho-hijos">
            <label for="hora-recogida" class='blanco'>Hora recogida</label>
            <select id='hora-recogida' class="form-select" aria-label="Default select example">
              <option value="1">10:00</option>
              <option value="2">11:00</option>
              <option value="3">12:00</option>
              <option value="4">13:00</option>
              <option value="5">14:00</option>
              <option value="6">15:00</option>
              <option value="7">16:00</option>
              <option value="8">17:00</option>
              <option value="9">18:00</option>
              <option value="10">19:00</option>
              <option value="12">20:00</option>
              <option value="12">21:00</option>
            </select>
          </div>
        </div>
        <div class='alinear'>
          <div class="mb-1 ancho-hijos">
            <label for="fecha-devolucion" class='blanco'>Fecha de devolución</label>
            <input type="date" class="form-control fechas" id="fecha-devolución">
          </div>
          <div class="mb-1 ancho-hijos">
            <label for="hora-devolución" class='blanco'>Hora devolución</label>
            <select id='hora-devolución' class="form-select" aria-label="Default select example">
              <option value="1">10:00</option>
              <option value="2">11:00</option>
              <option value="3">12:00</option>
              <option value="4">13:00</option>
              <option value="5">14:00</option>
              <option value="6">15:00</option>
              <option value="7">16:00</option>
              <option value="8">17:00</option>
              <option value="9">18:00</option>
              <option value="10">19:00</option>
              <option value="12">20:00</option>
              <option value="12">21:00</option>
            </select>
          </div>
        </div>


        <div class='registro boton'>
          <button type="submit" class="btn">Enviar</button>
        </div>
      </form>

    </div>







    <div class='lista-productos'>

      <div class="container grid item">
        <div class="row">
          <div class='col-md border-end'>
            <div class="col-sm border-bottom">
              <h3>
                <%= vehicle.name%>
              </h3>
              <img src="/img/img-autos/<%=vehicle.picture%>" alt="">
            </div>
            <!-- <div class="col-sm">
              
            </div> -->
          </div>
          <!-- <div class="col-md reserva-derecha">
            <div>
              $%= vehicle.pricexday%>/dia
            </div>
            <div class="escondido">

              


            </div>
            <div>
              
            </div>

          </div> -->

        </div>
        <div class="row">
          <p>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#detalle"
              aria-expanded="false" aria-controls="multiCollapseExample1">DETALLE DEL AUTO</button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#caracteristicas"
              aria-expanded="false" aria-controls="multiCollapseExample2">CARACTERISTICAS</button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#prestaciones"
              aria-expanded="false" aria-controls="multiCollapseExample3">ADICIONALES</button>
          </p>
          <div class="row">
            <div class="col-12">
              <div class="collapse multi-collapse" id="detalle">
                <div class="card vehicle card-body">
                  <%=vehicle.description%>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="collapse multi-collapse" id="caracteristicas">
                <div class="card vehicle card-body">
                  <ul>
                    CARACTERISTICAS
                    <li><i class="fas fa-check-circle"></i>
                      <%= vehicle.seat_number%> asientos
                    </li>
                    <li><i class="fas fa-check-circle"></i>
                      <%if(vehicle.transmission=1) { %> automático <% } else { %> manual <%}%>
                    </li>
                    <li><i class="fas fa-check-circle"></i>
                      <%=vehicle.fuel.name%>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="collapse multi-collapse" id="prestaciones">
                <div class="card vehicle card-body">
                  <ul>
                    ADICIONALES
                    <%if(vehicle.features !=null) %>
                      <%for(j of vehicle.features) {%>
                        <li>
                          <%=j.name%>
                        </li>
                        <%}%>
                          <li>kilometraje <%=vehicle.mileage%>
                          </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>


  </main>



  <!-------------------------------------------------INCLUYENDO FOOTER------------------------------>

  <%- include('../parcials/footer') %>