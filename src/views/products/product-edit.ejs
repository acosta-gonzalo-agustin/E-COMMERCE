<!-------------------------------------------------INCLUYENDO HEAD Y HEADER------------------------------>

<%- include('../parcials/head')  %>

  <main>

    <form class='formulario registro formulario-producto'>
      <div class="titulo-crear">
        <h1>EDITAR PRODUCTO</h1>
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" id="nombre" value="<%=producto.nombre%>">
      </div>
      <div class="mb-3">
        <input type="text" class="form-control" id="apellido" value="<%=producto.marca%>">
      </div>
      <div class="mb-3">
        <select class="form-select">
          <option selected>Categoria de vehiculo</option>
          <option value="Compactos">Compactos</option>
          <option value="Medianos">Medianos</option>
          <option value="Premium">Premium</option>
          <option value="Especiales">Especiales</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label">Remplazar imagenes:</label>
        <input class="form-control" type="file" id="formFileMultiple" multiple>
      </div>
      <div class="mb-3">
        <select class="form-select">
          <option selected>Cantidad de asientos</option>
          <option value="4">Cuatro</option>
          <option value="5">Cinco</option>
          <option value="6">Seis</option>
          <option value="7">Siete</option>
          <option value="8">Ocho</option>
          <option value="9">Nueve</option>
        </select>
      </div>
      <div class="mb-3">
        <select class="form-select">
          <option selected>Tipo de combustible</option>
          <option value="N">Nafta</option>
          <option value="G">Gasoil</option>
          <option value="GNC">GNC</option>
          <option value="E">Electrico</option>
        </select>
      </div>
      <div class="mb-3">
        <div class="form-check form-check-inline">
          <label for="caja">Caja de cambio</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="M">
          <label class="form-check-label" for="inlineRadio1">Manual</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="A">
          <label class="form-check-label" for="inlineRadio2">Automático</label>
        </div>
      </div>
      <div class="mb-3">
        <div class="form-check form-check-inline">
          <label for="caja">Airbag</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="S">
          <label class="form-check-label" for="inlineRadio1">Si</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="N">
          <label class="form-check-label" for="inlineRadio2">No</label>
        </div>
      </div>
      <div class="mb-3">
        <label for="adicionales">Adicionales</label> <br>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            AM/FM Stereo con CD
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
          <label class="form-check-label" for="flexCheckChecked">
            Bluetooth
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
          <label class="form-check-label" for="flexCheckChecked">
            Reproductor MP3
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
          <label class="form-check-label" for="flexCheckChecked">
            Sistema de frenos ABS
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
          <label class="form-check-label" for="flexCheckChecked">
            Doble Airbag
          </label>
        </div>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="number" step="0.01" class="form-control" aria-label="Amount (to the nearest dollar)" value="<%=producto.precioDia%>">
        <span class="input-group-text">.00</span>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="number" step="0.01" class="form-control" aria-label="Amount (to the nearest dollar)" value="<%=producto.precioDia%>">
        <span class="input-group-text">.00</span>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="number" step="0.01" class="form-control" aria-label="Amount (to the nearest dollar)" value="<%=producto.precioDia%>">
        <span class="input-group-text">.00</span>
      </div>
      <div class="mb-3">
        <select class="form-select">
          <option selected>Ciudad</option>
          <option value="N">Córdoba</option>
          <option value="G">Buenos Aires</option>
          <option value="GNC">Rosario</option>
          <option value="E">Mendoza Capital</option>
        </select>
      </div>

      <div class='registro boton'>
        <button type="submit" class="btn">Guardar modificaciones</button>
      </div>
    </form>





  </main>


  <!-------------------------------------------------INCLUYENDO FOOTER------------------------------>

  <%- include('../parcials/footer') %> 


</body>

</html>